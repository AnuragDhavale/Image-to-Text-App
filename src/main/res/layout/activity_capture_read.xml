<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaptureRead">

    <ImageView
        android:id="@+id/imageread"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="429dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/tvtext"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="262dp"
        android:textColor="@color/purple_700"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageread"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btcap"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="211dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/custombutton2"
        android:drawableLeft="@drawable/ic_baseline_photo_camera_24"

        android:text="Capture"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvtext" />

    <Button
        android:id="@+id/btread"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="12dp"
        android:text="Read"
        android:background="@drawable/custombutton2"
        android:drawableLeft="@drawable/ic_baseline_read_more_24"

        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btcap"
        app:layout_constraintTop_toBottomOf="@+id/tvtext" />


</androidx.constraintlayout.widget.ConstraintLayout>